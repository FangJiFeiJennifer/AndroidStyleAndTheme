<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    tools:context="com.keegan.kstyle.OvalActivity">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_ring_with_solid" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_ring_with_gradient" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_ring_with_stroke" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_ring_with_gradient_stroke" />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/bg_ring_with_gradient_rotate" />
</LinearLayout>
