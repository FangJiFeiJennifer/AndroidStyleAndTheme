<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Content"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <Button
        style="@style/Button"
        android:onClick="toShape"
        android:text="Shape" />

    <Button
        style="@style/Button"
        android:onClick="toSelector"
        android:text="Selector" />

    <Button
        style="@style/Button"
        android:onClick="toLayerList"
        android:text="Layer-list" />
    <Button
        style="@style/Button"
        android:onClick="toAnimation"
        android:text="Animation" />
    <Button
        style="@style/Button"
        android:onClick="toMaterialDesign"
        android:text="Material Design"/>
    <Button
        style="@style/Button"
        android:onClick="toImageView"
        android:text="ImageView"/>
    <Button
        style="@style/Button"
        android:onClick="toLayoutWeight"
        android:text="LayoutWeight"/>
</LinearLayout>
